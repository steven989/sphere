<script>
$(function(){
    $('#canvas').bubblify(<%= raw @raw_bubbles_data %>,<%= raw @bubbles_parameters %>)
})
</script>

<h3>Connections</h3>
<%= link_to 'Create Connection', new_connection_path %>
<table border=1>
    <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Add Activity</th>
    </thead>
    <tbody>
        <% @connections.each do |connection| %>
            <tr>
                <td><%= connection.first_name %></td>
                <td><%= connection.last_name %></td>
                <td><%= link_to 'Add', new_activity_path(connection) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<h3>Activities</h3>
<table border=1>
    <thead>
        <th>Date</th>
        <th>Connection</th>
        <th>Activity</th>
        <th>Activity Description</th>
    </thead>
    <tbody>
        <% @activities.each do |activity| %>
            <tr>
                <td><%= activity.date.blank? ? "" : activity.date.strftime('%Y-%m-%d') %></td>
                <td><%= activity.connection.name %></td>
                <td><%= activity.activity_definition.blank? ? "" : activity.activity_definition.activity %></td>
                <td><%= activity.activity_description %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<div id="canvas" style="background:gray; width:600px; height:600px; position: relative;"></div>


<%= link_to 'Logout', logout_path %>